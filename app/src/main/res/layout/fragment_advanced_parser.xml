<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Продвинутый парсер PDF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загрузите PDF лист персонажа для улучшенного парсинга с визуальной проверкой"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- Upload Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/uploadPdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать PDF"
            android:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="start"
            android:layout_marginBottom="16dp"/>

        <!-- Progress Indicator -->
        <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"/>

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Парсинг PDF..."
                android:textAlignment="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Parse Result Info -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/characterNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Character: Unknown"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/systemText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="System: Unknown"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/confidenceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confidence: 0%"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/sectionsCountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sections: 0"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Parsed Sections List -->
        <TextView
            android:id="@+id/sectionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Распознанные секции:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sectionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <!-- Empty View -->
        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Загрузите PDF файл для начала парсинга"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <!-- Create Character FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/createCharacterFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Создать персонажа"
        android:icon="@android:drawable/ic_menu_add"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
