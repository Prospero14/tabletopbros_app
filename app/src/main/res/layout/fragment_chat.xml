<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chat"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/pinnedMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="#404040"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_dot_filled"
                    app:tint="@color/primary_light"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pinned_message"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/primary_light"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/pinnedMessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#E0E0E0"
                android:textSize="13sp"
                android:lineSpacingExtra="1dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chat_placeholder"
        android:textSize="14sp"
        android:textColor="#808080"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/messageInputContainer"
        app:layout_constraintTop_toBottomOf="@+id/pinnedMessageContainer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/pollsRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinnedMessageContainer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pollsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:clipToPadding="false"
        android:paddingBottom="6dp"
        android:nestedScrollingEnabled="false"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/messageInputContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagesRecyclerView" />

    <LinearLayout
        android:id="@+id/messageInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuButton"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="8dp"
            app:icon="@drawable/ic_more_vert"
            app:iconTint="#B0B0B0"
            app:iconGravity="textStart"
            app:iconSize="22dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@android:color/transparent"
            app:rippleColor="@color/primary_light"
            android:contentDescription="Меню"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_message_input"
            android:hint="@string/chat_hint"
            android:textColor="#E0E0E0"
            android:textColorHint="#707070"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:maxLines="5"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="8dp"
            app:icon="@drawable/ic_send_custom"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/primary"
            app:rippleColor="@color/primary_light"
            android:contentDescription="@string/chat_send"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>